CREATE TABLE EMPLOYEE(
ID NUMBER(4),
F_NAME VARCHAR2(20),
L_NAME VARCHAR2(20),
DEPT VARCHAR2(6),
SALARY NUMBER(5),
DOJ DATE,
ADDRESS VARCHAR2(20),
MARRIED VARCHAR(1));
